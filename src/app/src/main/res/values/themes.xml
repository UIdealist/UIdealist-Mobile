<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Idealist" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="CenterHorizontally">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Main Button Styles -->
    <style name="MainButtonBase" parent="CenterHorizontally">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="MainButtonColor1" parent="MainButtonBase">
        <item name="android:background">#EE8A17</item>
    </style>
    <style name="MainButtonColor2" parent="MainButtonBase">
        <item name="android:background">#72F833</item>
    </style>
    <style name="MainButtonColor3" parent="MainButtonBase">
        <item name="android:background">#993DF4</item>
    </style>
    <style name="MainButtonColor4" parent="MainButtonBase">
        <item name="android:background">#20FFD8</item>
    </style>

    <!-- Main Text Styles -->

    <style name="MainTitle" parent="CenterHorizontally">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainSubTitle" parent="CenterHorizontally">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>